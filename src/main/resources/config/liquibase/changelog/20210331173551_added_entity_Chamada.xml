    <!--
        Added the entity Chamada.
    -->
    <changeSet id="20210331173551-1" author="jhipster">
        <createTable tableName="chamada">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="data_aula" type="date">
                <constraints nullable="true" />
            </column>
            <column name="observacoes" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="aluno_chamada_id" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="turma_chamada_id" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="professor_chamada_id" type="bigint">
                <constraints nullable="true" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here -->
