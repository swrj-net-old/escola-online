            </column>
            <column name="total_pago" type="decimal(21,2)">
                <constraints nullable="true" />
            </column>
            <column name="total_desconto" type="decimal(21,2)">
                <constraints nullable="true" />
            </column>
            <column name="total_devido" type="decimal(21,2)">
